{
    "name": "pyLoad",
    "id": "pyload",
    "packaging_format": 1,
    "description": {
        "en": "pyLoad package for YunoHost.",
        "fr": "pyLoad pour YunoHost."
    },
    "version": "0.4.9",
    "url": "https://pyload.net/",
    "license": "free",
    "maintainer": {
        "name": "liberodark",
        "email": "liberodark@gmail.com"
    },
    "requirements": {
        "yunohost": ">= 2.7.2"
    },
    "multi_instance": true,
    "services": [
        "nginx",
        "php5-fpm",
        "mysql"
    ],
    "arguments": {
        "install": [{
                "name": "domain",
                "type": "domain",
                "ask": {
                    "en": "Choose a domain name for pyLoad",
                    "fr": "Choisissez un nom de domaine pour pyLoad"
                },
                "example": "example.com"
            },

            {
                "name": "path",
                "type": "path",
                "ask": {
                    "en": "Choose a path for pyLoad /pyload is accepted",
                    "fr": "Choisissez un chemin pour pyLoad /pyload est accept√©"
                },
                "example": "/pyload",
                "default": "/pyload"
            },
            
            {
                "name": "is_public",
                "type": "boolean",
                "ask": {
                    "en": "Is it a public site ?",
                    "fr": "Est-ce un site public ?"
                },
                "default": "true"
            }
        ]
    }
}
